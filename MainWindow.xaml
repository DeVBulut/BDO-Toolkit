<Window x:Class="Bdo_Toolkit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BDO Grind Tracker"
        Height="450" Width="300"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        MouseDown="Window_MouseDown"
        >

    <Border BorderThickness="2"
            BorderBrush="#e67e22"
            CornerRadius="12"
            Background="#1e1e1e"
            Padding="10">

        <Grid>
            <StackPanel Orientation="Vertical" VerticalAlignment="Top">

                <TextBlock Text="BDO Grind Tracker"
                           FontSize="21" FontWeight="Bold"
                           Foreground="White"
                           Margin="0,8,0,10"
                           HorizontalAlignment="Center"/>

                <TextBlock x:Name="TimerTextBlock"
                           Text="Timer: 00:00:00"
                           FontSize="14"
                           Foreground="#FFDA44"
                           Margin="0,0,0,20"
                           HorizontalAlignment="Center"/>   

                <TextBlock Text="📦 Trash Loot: 1228"
                           FontSize="14"
                           Foreground="#FFD600"
                           Margin="15,0,0,10"/>

                <TextBlock Text="💎 Rare Drops: 3"
                           FontSize="14"
                           Foreground="#7C4DFF"
                           Margin="15,0,0,200"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                    <Button Content="Start" Width="80" Margin="5" Click="Start_Click"/>
                    <Button Content="Pause" Width="80" Margin="5" Click="Pause_Click"/>
                    <Button Content="End" Width="80" Margin="5" Click="End_Click"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,25,0,0">
                    <CheckBox Content="Always On Top" HorizontalAlignment="Left" Margin="0,0,10,0">
                        <CheckBox.Style>
                            <Style TargetType="CheckBox">
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontSize" Value="14"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="CheckBox">
                                            <StackPanel Orientation="Horizontal">
                                                <!-- Rounded box -->
                                                <Border x:Name="CheckBoxBorder"
                                                        Width="16" Height="16"
                                                        CornerRadius="4"
                                                        Background="Transparent"
                                                        BorderBrush="#FF8040"
                                                        BorderThickness="2"
                                                        Margin="0,0,8,0"
                                                        VerticalAlignment="Center">
                                                      <!-- Checkmark -->
                                                      <Path x:Name="CheckMark"
                                                            Data="M0,4 L2,6 6,0"
                                                            Stroke="White"
                                                            StrokeThickness="2"
                                                            Visibility="Collapsed"
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"
                                                      />
                                                </Border>

                                                <!-- Label text -->
                                                <ContentPresenter VerticalAlignment="Center"/>
                                            </StackPanel>

                                            <!-- Logic -->
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                                                    <Setter TargetName="CheckBoxBorder" Property="Background" Value="#FF512BD4"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </CheckBox.Style>
                    </CheckBox>

                    <CheckBox Content="Always On Top" Height="24">
                        <CheckBox.Style>
                            <Style TargetType="CheckBox">
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontSize" Value="14"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="CheckBox">
                                            <StackPanel Orientation="Horizontal">
                                                <!-- Rounded box -->
                                                <Border x:Name="CheckBoxBorder"
                                                        Width="16" Height="16"
                                                        CornerRadius="4"
                                                        Background="Transparent"
                                                        BorderBrush="#FF512BD4"
                                                        BorderThickness="2"
                                                        Margin="0,0,8,0"
                                                        VerticalAlignment="Center">
                                                    <!-- Checkmark -->
                                                    <Path x:Name="CheckMark"
                                                          Data="M0,4 L2,6 6,0"
                                                          Stroke="White"
                                                          StrokeThickness="2"
                                                          Visibility="Collapsed"
                                                          HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                                </Border>

                                                <!-- Label text -->
                                                <ContentPresenter VerticalAlignment="Center"/>
                                            </StackPanel>

                                            <!-- Logic -->
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                                                    <Setter TargetName="CheckBoxBorder" Property="Background" Value="#FF512BD4"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </CheckBox.Style>
                    </CheckBox>



                </StackPanel>

            </StackPanel>
        </Grid>
    </Border>
</Window>
