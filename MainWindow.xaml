<Window x:Class="Bdo_Toolkit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BDO Grind Tracker"
        Height="500" Width="400"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        MouseDown="Window_MouseDown"
        >

    <Border BorderThickness="2"
            BorderBrush="#FFDA44"
            CornerRadius="12"
            Background="#1e1e1e"
            Padding="10">

        <Grid>
            <StackPanel Orientation="Vertical" VerticalAlignment="Top">

                <TextBlock Text="BDO Grind Tracker"
                           FontSize="30" FontWeight="Bold"
                           Foreground="White"
                           Margin="0,8,0,10"
                           HorizontalAlignment="Center"/>

                <TextBlock Text="Timer: 00:47:15"
                           FontSize="16"
                           Foreground="#FFDA44"
                           Margin="0,0,0,20"
                           HorizontalAlignment="Center"/>

                <TextBlock Text="📦 Trash Loot: 1228"
                           FontSize="20"
                           Foreground="#FFD600"
                           Margin="15,0,0,10"/>

                <TextBlock Text="💎 Rare Drops: 3"
                           FontSize="20"
                           Foreground="#7C4DFF"
                           Margin="15,0,0,250"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                    <Button Content="Start" Width="80" Margin="5"/>
                    <Button Content="Pause" Width="80" Margin="5"/>
                    <Button Content="End" Width="80" Margin="5"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <CheckBox Content="Always On Top" Margin="10,0,0,0" Foreground="White"/>
                    <CheckBox Content="Minimize to Tray" Margin="10,0,0,0" Foreground="White"/>
                </StackPanel>

            </StackPanel>
        </Grid>
    </Border>
</Window>
