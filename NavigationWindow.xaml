<Window x:Class="Bdo_Toolkit.NavigationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bdo_Toolkit"
        mc:Ignorable="d"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="#1a1a1e"
        ResizeMode="NoResize"
        Title="NavigationWindow" Height="450" Width="300"
        MouseDown="Window_MouseDown">


    <Border BorderThickness="2"
            BorderBrush="#2980b9"
            CornerRadius="3"
            Background="#1e1e1e"
            Padding="10">

        <Grid>
            <TextBlock Text="Bdo Toolkit"
                       FontSize="32"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="0,0,0,381">

            </TextBlock>

            <StackPanel Orientation="Vertical" 
                        VerticalAlignment="Top"
                        HorizontalAlignment="Center"
                        Margin="0,60,0,0" Height="350" Width="250"
                        >
                <Border BorderThickness="2"
                        BorderBrush="#e67e22"
                        Background="#222327"
                        Margin="0,0,0,10">       
                        <Button Height="50"
                                Background="#222327"
                                BorderThickness="0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch" Click="Button_Click">

                                <TextBlock Text="Grind Tracker"
                                           FontSize="18"
                                           Foreground="White"
                                           HorizontalAlignment="Center">
                                </TextBlock>

                        </Button>
                </Border>
                
                
                <Border BorderThickness="2"
                        BorderBrush="#f1c40f"
                        Background="#222327"
                        Margin="0,0,0,10">
                    <Button Height="50"
                            Background="#222327"
                            BorderThickness="0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch">
                        <TextBlock Text="Caphras Calculator"
                                   FontSize="18"
                                   Foreground="White"
                                   HorizontalAlignment="Center">
                        </TextBlock>
                    </Button>
                </Border>

                <Border BorderThickness="2"
                        BorderBrush="#27ae60"
                        Background="#222327"
                        Margin="0,0,0,10">
                    <Button Height="50"
                            Background="#222327"
                            BorderThickness="0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch">
                        <TextBlock Text="AP &amp; DP Brackets"
                                   FontSize="18"
                                   Foreground="White"
                                   HorizontalAlignment="Center">
                        </TextBlock>
                    </Button>
                </Border>

                <Border BorderThickness="2"
                        BorderBrush="#c0392b"
                        Background="#222327"
                        Margin="0,0,0,10">
                    <Button Height="50"
                            Background="#222327"
                            BorderThickness="0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch">
                        <TextBlock Text="Boss Timer"
                                   FontSize="18"
                                   Foreground="White"
                                   HorizontalAlignment="Center">
                        </TextBlock>
                    </Button>
                </Border>


            </StackPanel>


        </Grid>
    </Border>

</Window>
